<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SiparisSayfasi">

    <!-- TODO: Update blank fragment layout -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="150dp">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="411dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/profilresmi"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:maxWidth="150dp"
                        android:maxHeight="150dp"
                        android:layout_gravity="center"
                        tools:src="@tools:sample/avatars">
                    </ImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ad_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:textSize="20dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/mail_text2"
                            android:minHeight="50dp"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </TableLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="130dp">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="411dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/yemekresmi1"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:maxHeight="150dp"
                        android:maxWidth="120dp"
                        android:layout_gravity="center"
                        tools:src="@tools:sample/avatars">
                    </ImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lahmacun"
                            android:textStyle="italic"
                            android:textAllCaps="true"
                            android:minHeight="50dp"
                            android:textSize="30dp"
                            android:textColor="@color/black"
                            android:background="#a3f3ff"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bol Acılı Lahmacun"
                            android:minHeight="50dp"
                            android:textSize="20dp"
                            android:textColor="@color/design_default_color_primary"
                            android:background="#a3f3ff" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/Lahmacun_radiogroup"
                                android:orientation="horizontal">
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:id="@+id/lahmacunucrettutucu"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/Kucuk_Radio1"
                                    android:text="Küçük"
                                    android:minHeight="50dp"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    android:background="#008000"
                                    android:minWidth="100dp"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Orta"
                                    android:minHeight="50dp"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    android:background="#0014db"
                                    android:id="@+id/Kucuk_Radio2"
                                    android:minWidth="90dp"></RadioButton>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Büyük"
                                    android:minHeight="50dp"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    android:background="#e91700"
                                    android:id="@+id/Kucuk_Radio3"
                                    android:minWidth="90dp"></RadioButton>
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </TableLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="130dp">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="411dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/yemekresmi2"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:maxHeight="150dp"
                        android:maxWidth="120dp"
                        android:layout_gravity="center"
                        tools:src="@tools:sample/avatars">
                    </ImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PİDE"
                            android:textStyle="italic"
                            android:textAllCaps="true"
                            android:minHeight="50dp"
                            android:textSize="30dp"
                            android:textColor="@color/black"
                            android:background="#d8cd00"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kıymalı Ve Bol Terayağlı"
                            android:minHeight="50dp"
                            android:textSize="20dp"
                            android:textColor="@color/design_default_color_primary"
                            android:background="#d8cd00" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/Pide_radiogroup"
                                android:orientation="horizontal">
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:id="@+id/pideucretutucu"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/Kucuk_Radio4"
                                    android:text="Küçük"
                                    android:minHeight="50dp"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    android:background="#008000"
                                    android:minWidth="100dp"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Orta"
                                    android:minHeight="50dp"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    android:background="#0014db"
                                    android:id="@+id/Kucuk_Radio5"
                                    android:minWidth="90dp"></RadioButton>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Büyük"
                                    android:minHeight="50dp"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    android:background="#e91700"
                                    android:id="@+id/Kucuk_Radio6"
                                    android:minWidth="90dp"></RadioButton>
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </TableLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="50dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ucrethesaplamabutonu"
                android:text="HESAPLA">
            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ucrettextview"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:background="#d8cd00">
            </TextView>
        </TableRow>
    </TableLayout>

</FrameLayout>